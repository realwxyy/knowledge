.quotation-card {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  height: 240rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.hot-area {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.logo {
  padding-left: 40rpx;
}

.main-info {
  width: 422rpx;
  height: 84%;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.name,
.date,
.desc {
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.tag-scroll-view {
  width: 360rpx;
  height: 25%;
  white-space: nowrap;
}

.tag-main {
  margin-left: 12rpx;
}

.tag-main:first-child {
  margin-left: 0;
}

.name {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
}

.name-span,
.desc-span {
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.date,
.desc {
  color: #666666;
  font-size: 24rpx;
}
